# RustyDB Frontend Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for RustyDB REST API
VITE_API_URL=http://localhost:8080

# GraphQL endpoint
VITE_GRAPHQL_URL=http://localhost:8080/graphql

# WebSocket endpoint for real-time updates
VITE_WS_URL=ws://localhost:8080/ws

# API version
VITE_API_VERSION=v1

# =============================================================================
# Authentication
# =============================================================================

# Enable authentication (set to 'true' in production)
VITE_AUTH_ENABLED=false

# Session timeout in milliseconds (default: 30 minutes)
VITE_SESSION_TIMEOUT=1800000

# Token refresh interval in milliseconds (default: 5 minutes)
VITE_TOKEN_REFRESH_INTERVAL=300000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable GraphQL Playground
VITE_ENABLE_GRAPHQL_PLAYGROUND=true

# Enable query profiling
VITE_ENABLE_QUERY_PROFILING=true

# Enable cluster management features
VITE_ENABLE_CLUSTER_MANAGEMENT=true

# Enable ML/AI features
VITE_ENABLE_ML_FEATURES=true

# Enable real-time monitoring
VITE_ENABLE_REALTIME_MONITORING=true

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Metrics refresh interval in milliseconds (default: 5 seconds)
VITE_METRICS_REFRESH_INTERVAL=5000

# Dashboard auto-refresh interval in milliseconds (default: 10 seconds)
VITE_DASHBOARD_REFRESH_INTERVAL=10000

# Log streaming buffer size
VITE_LOG_BUFFER_SIZE=1000

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme ('light' | 'dark' | 'system')
VITE_DEFAULT_THEME=dark

# Default page size for tables
VITE_DEFAULT_PAGE_SIZE=50

# Maximum page size for tables
VITE_MAX_PAGE_SIZE=1000

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# =============================================================================
# Query Editor Configuration
# =============================================================================

# Maximum query size in bytes (default: 1MB)
VITE_MAX_QUERY_SIZE=1048576

# Query history limit
VITE_QUERY_HISTORY_LIMIT=100

# Auto-save interval for queries in milliseconds (default: 30 seconds)
VITE_QUERY_AUTOSAVE_INTERVAL=30000

# =============================================================================
# Security Configuration
# =============================================================================

# Enable Content Security Policy reporting
VITE_CSP_REPORT_URI=

# Enable strict transport security
VITE_ENABLE_HSTS=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development mode features
VITE_DEV_MODE=true

# Enable React Query devtools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# Log level ('debug' | 'info' | 'warn' | 'error')
VITE_LOG_LEVEL=debug
